generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id        Int      @id @default(autoincrement())
  name      String
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  MenuItem  MenuItem[]
}

model MenuItem {
  id           Int        @id @default(autoincrement())
  name         String
  type         String
  price        Decimal
  restaurantId Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  date      DateTime
  time      String
  guests    Int
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}